<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <MyProjectOutputPath>$(PackageLayout)\..\..\MyDesktopApp\bin</MyProjectOutputPath>
    <MyBgTaskOutputPath>$(PackageLayout)\..\..\DummyApp\bin</MyBgTaskOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <LayoutFile Include="$(MyProjectOutputPath)\$(Platform)\$(Configuration)\MyDesktopApp.exe">
      <PackagePath>$(PackageLayout)\MyDesktopApp.exe</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(MyBgTaskOutputPath)\$(Platform)\$(Configuration)\ilc\BackgroundTasks.winmd">
      <PackagePath>$(PackageLayout)\BackgroundTasks.winmd</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(MyBgTaskOutputPath)\$(Platform)\$(Configuration)\ilc\DummyApp.dll">
      <PackagePath>$(PackageLayout)\DummyApp.dll</PackagePath>
    </LayoutFile>
  </ItemGroup>
</Project>
